@model GenAITech.Models.GenAISite

@{
    ViewData["Title"] = "Delete";
}
<div id="genai-index" class="fullscreen">
    <div class="container">
        <h1 class="text-center title-yellow my-5">Delete GenAI Website</h1>

        <div class="row">
            <hr class="text-warning border border-warning mb-0">
            <h2 class="text-warning">Are you sure you want to delete this?</h2>
            <hr class="text-warning border border-warning mb-0">
            <div>
                <dl class="row text-white">
                    <dt class="col-sm-2">
                        GenAI Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GenAIName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Summary)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Summary)
                    </dd>
                    <dt class="col-sm-2">
                        Image Filename
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImageFilename)
                    </dd>
                    <dt class="col-sm-2">
                        Anchor Link
                    </dt>
                    <dd class="col-sm-10">
                        GenAISites/#@Html.DisplayFor(model => model.AnchorLink)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Like)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Like)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-white">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger py-1" /> |
                    <a class="text-secondary" asp-action="Index">Back to GenAI Websites</a>
                </form>
            </div>

        </div>
    </div>
</div>
