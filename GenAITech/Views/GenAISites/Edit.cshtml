@model GenAITech.Models.GenAISite

@{
    ViewData["Title"] = "Edit";
}

<div id="add-genai" class="fullscreen">
    <div class="container">
        <h1 class="text-center title-yellow my-5">Edit GenAI Website</h1>
        <hr class="text-warning border border-warning" />
        <div class="row d-flex justify-content-center gx-2">
            <div class="col-12">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Like" />
                    <input type="hidden" asp-for="AnchorLink" />
                    <div class="form-group mt-3">
                        <label class="text-white" asp-for="GenAIName" class="control-label">GenAI Name</label>
                        <input asp-for="GenAIName" class="form-control" />
                        <span asp-validation-for="GenAIName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label class="text-white" asp-for="Summary" class="control-label"></label>
                        <textarea asp-for="Summary" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label class="text-white" asp-for="ImageFilename" class="control-label">Upload Image
                            File</label>
                        <input type="file" asp-for="ImageFilename" class="form-control" />
                        <span asp-validation-for="ImageFilename" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <input type="submit" value="Save" class="btn btn-primary py-1" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
